<%= link_to("Back to Section List", {action: 'index', page_id: @page.id}, :class => 'back-link') %>

<div class="pages_edit">
	<h2>Delete Page</h2>

	<%= form_tag({action: 'destroy', id: @section.id, page_id: @page.id}) do %>
		
		<p>Are you sure you want to permanently delete this section ?</p>
		
		<p class="reference-name"><%= @section.name %></p>

	<div class="form-buttons">
		<%= submit_tag('Delete Page') %>
	</div>

	<% end %>

</div>