<%= link_to("Back to Pages List", {action: 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="pages_delete">
	<h2>Delete Page</h2>

	<%= form_tag({action: 'destroy', id: @page.id, :subject_id => @subject.id}) do %>
		
		<p>Are you sure you want to permanetly delete this page ?</p>
		
		<p class="reference-name"><%= @page.name %></p>

	<div class="form-buttons">
		<%= submit_tag('Delete Page') %>
	</div>

	<% end %>

</div>